{
  "name": "project",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:scss": "node-sass --output-style compressed -o dist/styles src/styles",
    "watch:scss": "onchange -v \"src/styles/*.scss\" -- npm run build:scss",
    "start": "browser-sync -s \"src\" -f \"./index.html\" -f \"dist/**/*\" -f \"src/**/*\"",
    "watch:all": "parallelshell \"npm start\" \"npm run watch:scss\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.26.10",
    "node-sass": "^4.14.1",
    "onchange": "^7.0.2",
    "parallelshell": "^3.0.1"
  }
}
